	<!-- SkinParts
	name=labelDisplay, type=spark.components.supportClasses.TextBase, required=false
	-->
	
	<s:Rect left="-2" right="-2" top="-2" bottom="-2" alpha="0.45" radiusX="5" includeIn="over,down">
