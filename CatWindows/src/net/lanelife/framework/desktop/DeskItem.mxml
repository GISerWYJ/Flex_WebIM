					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" width="80" height="65"  
					buttonMode="true" useHandCursor="true"
					xmlns:deskitem="net.lanelife.framework.desktop.basenodes.*">

	<mx:Image source="images/icon.png" horizontalCenter="0" width="40" height="40" smoothBitmapContent="true" />
	
