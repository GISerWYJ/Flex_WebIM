		<s:fill>
			<s:SolidColor color="#000000" />
		</s:fill>
	</s:Rect>
	
	<s:Label text="{label}" height="20" bottom="0" width="100%" verticalAlign="middle"
			 color="#ffffff"
			 textAlign="center"/>
	
